{
  "version": "2025-09-20",
  "colors": {
    "brand": {
      "primary": "#778DA9",
      "secondary": "#E0E1DD",
      "accent": "#FFECD1"
    },
    "neutral": {
      "ink": "#1B263B",
      "ink-subtle": "#415A77",
      "surface": "#F8F9FC"
    }
  },
  "typography": {
    "heading": {
      "fontFamily": "Space Grotesk",
      "weight": 600,
      "lineHeight": 1.2
    },
    "body": {
      "fontFamily": "Inter",
      "weight": 400,
      "lineHeight": 1.5
    }
  },
  "spacing": {
    "xs": 8,
    "sm": 16,
    "md": 24,
    "lg": 32
  },
  "backgrounds": {
    "brand-gradient-soft": {
      "type": "gradient",
      "css": "linear-gradient(135deg, rgba(119, 141, 169, 0.85), rgba(224, 225, 221, 0.65))"
    },
    "brand-gradient-contrast": {
      "type": "gradient",
      "css": "linear-gradient(120deg, rgba(27, 38, 59, 0.92), rgba(119, 141, 169, 0.78))"
    },
    "beige-paper": {
      "type": "texture",
      "css": "radial-gradient(circle at 20% 20%, rgba(255, 236, 209, 0.65), rgba(224, 225, 221, 0.45))"
    }
  },
  "patterns": {
    "grid": {
      "description": "Subtle 40px grid lines for structure",
      "svg": "<svg xmlns='http://www.w3.org/2000/svg' width='1280' height='720'><defs><pattern id='grid' width='40' height='40' patternUnits='userSpaceOnUse'><path d='M 40 0 L 0 0 0 40' fill='none' stroke='rgba(255,255,255,0.08)' stroke-width='1'/></pattern></defs><rect width='100%' height='100%' fill='url(#grid)' /></svg>"
    },
    "dots": {
      "description": "Light dotted scatter for energy",
      "svg": "<svg xmlns='http://www.w3.org/2000/svg' width='1280' height='720'><g fill='rgba(255,255,255,0.06)'>${DOTS}</g></svg>",
      "generator": "dots"
    },
    "wave": {
      "description": "Layered wave bands for movement",
      "svg": "<svg xmlns='http://www.w3.org/2000/svg' width='1280' height='720'><path d='M0,420 C320,320 560,520 1280,380 L1280,720 L0,720 Z' fill='rgba(255,255,255,0.08)'/><path d='M0,520 C320,420 560,620 1280,480 L1280,720 L0,720 Z' fill='rgba(255,255,255,0.05)'/></svg>"
    }
  },
  "overlays": {
    "beige-ribbon": {
      "description": "Diagonal ribbon accent using warm beige palette",
      "css": "linear-gradient(120deg, rgba(255,236,209,0.6) 0%, rgba(255,236,209,0) 55%)"
    },
    "slate-card": {
      "description": "Centered card with soft shadow for emphasis",
      "css": "background: rgba(27,38,59,0.82); box-shadow: 0 24px 48px rgba(27,38,59,0.24); border-radius: 24px;"
    },
    "glass-panel": {
      "description": "Frosted glass panel for callouts",
      "css": "background: rgba(248,249,252,0.72); backdrop-filter: blur(24px); border-radius: 32px;"
    }
  },
  "layouts": {
    "single-column": {
      "description": "Centered headline with body stack",
      "columns": 1,
      "gutter": "md"
    },
    "two-column": {
      "description": "Side-by-side content with equal columns",
      "columns": 2,
      "gutter": "lg"
    },
    "sidebar": {
      "description": "Narrow left column for navigation, wide content area",
      "columns": 2,
      "gutter": "md",
      "weights": [
        0.35,
        0.65
      ]
    }
  }
}